<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 开启使用开发模式，详细错误提示 -->
	<constant name="struts.devMode" value="false" />
	<!-- 将对象交给spring管理 -->
	<constant name="struts.objectFactory" value="spring" />
	<!-- 指定资源编码类型 -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<!-- 指定每次请求到达，重新加载资源文件 -->
	<constant name="struts.configuration.xml.reload" value="true" />
	<!-- 国际化资源文件 -->
	<constant name="struts.custom.i18n.resources"
		value="resources/content/Language" />
	<!-- 默认后缀名
	<constant name="struts.action.extension" value="do,action,jhtml,service,ajax" />
	-->
	<!-- 配置struts2.1.8 上传是文件的最大限制为100M -->
    <constant name="struts.multipart.maxSize" value="604857600" />  
    <!-- 设置struts2 上传文件时  保存的临时目录 -->  
    <constant name="struts.multipart.saveDir" value="C:/temp"></constant>
